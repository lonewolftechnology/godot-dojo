<?xml version="1.0" encoding="UTF-8" ?>
<class name="DojoController" inherits="Node" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/godotengine/godot/master/doc/class.xsd">
	<brief_description>
		A controller class for managing Dojo accounts and interactions.
	</brief_description>
	<description>
		The DojoController class provides methods to manage Dojo accounts, including initialization, execution of calls, and handling of account details.
	</description>
	<tutorials>
	</tutorials>
	<methods>
		<method name="address" qualifiers="const">
			<return type="String" />
			<description>
				Returns the address of the controller account.
			</description>
		</method>
		<method name="app_id" qualifiers="const">
			<return type="String" />
			<description>
				Returns the application ID associated with the controller.
			</description>
		</method>
		<method name="chain_id" qualifiers="const">
			<return type="String" />
			<description>
				Returns the chain ID of the network the controller is connected to.
			</description>
		</method>
		<method name="clear_last_error" qualifiers="const">
			<return type="void" />
			<description>
				Clears the last error message stored in the controller.
			</description>
		</method>
		<method name="delegate_account" qualifiers="const">
			<return type="String" />
			<description>
				Returns the delegate account address.
			</description>
		</method>
		<method name="disconnect" qualifiers="const">
			<return type="void" />
			<description>
				Disconnects the controller.
			</description>
		</method>
		<method name="error_message" qualifiers="const">
			<return type="String" />
			<description>
				Returns the last error message, if any.
			</description>
		</method>
		<method name="execute" qualifiers="const">
			<return type="String" />
			<param index="0" name="calls" type="Dictionary[]" />
			<description>
				Executes a list of calls.
			</description>
		</method>
		<method name="execute_single" qualifiers="const">
			<return type="String" />
			<param index="0" name="contract_address" type="String" />
			<param index="1" name="entrypoint" type="String" />
			<param index="2" name="calldata" type="Array" />
			<description>
			</description>
		</method>
		<method name="from_storage" qualifiers="static">
			<return type="DojoController" />
			<param index="0" name="app_id" type="String" />
			<description>
				Creates a DojoController instance from storage using the application ID.
			</description>
		</method>
		<method name="get_info" qualifiers="const">
			<return type="Dictionary" />
			<description>
				Returns a dictionary containing information about the controller, such as address, app_id, chain_id, delegate_account, and username.
			</description>
		</method>
		<method name="init" qualifiers="static">
			<return type="DojoController" />
			<param index="0" name="app_id" type="String" />
			<param index="1" name="username" type="String" />
			<param index="2" name="class_hash" type="String" />
			<param index="3" name="rpc_url" type="String" />
			<param index="4" name="owner" type="DojoOwner" />
			<param index="5" name="address" type="String" />
			<param index="6" name="chain_id" type="String" />
			<description>
				Initializes a new DojoController instance.
			</description>
		</method>
		<method name="initialize">
			<return type="bool" />
			<param index="0" name="app_id" type="String" />
			<param index="1" name="username" type="String" />
			<param index="2" name="class_hash" type="String" />
			<param index="3" name="rpc_url" type="String" />
			<param index="4" name="owner" type="DojoOwner" />
			<param index="5" name="address" type="String" />
			<param index="6" name="chain_id" type="String" />
			<description>
				Initializes the controller with the provided parameters.
			</description>
		</method>
		<method name="initialize_headless">
			<return type="bool" />
			<param index="0" name="app_id" type="String" />
			<param index="1" name="username" type="String" />
			<param index="2" name="class_hash" type="String" />
			<param index="3" name="rpc_url" type="String" />
			<param index="4" name="owner" type="DojoOwner" />
			<param index="5" name="chain_id" type="String" />
			<description>
				Initializes the controller in headless mode.
			</description>
		</method>
		<method name="is_valid" qualifiers="const">
			<return type="bool" />
			<description>
				Checks if the controller is valid (initialized).
			</description>
		</method>
		<method name="new_headless" qualifiers="static">
			<return type="DojoController" />
			<param index="0" name="app_id" type="String" />
			<param index="1" name="username" type="String" />
			<param index="2" name="class_hash" type="String" />
			<param index="3" name="rpc_url" type="String" />
			<param index="4" name="owner" type="DojoOwner" />
			<param index="5" name="chain_id" type="String" />
			<description>
				Creates a new headless DojoController instance.
			</description>
		</method>
		<method name="signup" qualifiers="const">
			<return type="void" />
			<param index="0" name="signer_type" type="int" />
			<param index="1" name="session_expiration" type="Variant" />
			<param index="2" name="cartridge_api_url" type="Variant" />
			<description>
				Signs up a new user.
			</description>
		</method>
		<method name="switch_chain" qualifiers="const">
			<return type="void" />
			<param index="0" name="rpc_url" type="String" />
			<description>
				Switches the chain to the specified RPC URL.
			</description>
		</method>
		<method name="transfer" qualifiers="const">
			<return type="String" />
			<param index="0" name="recipient" type="String" />
			<param index="1" name="amount" type="String" />
			<description>
				Transfers an amount to a recipient.
			</description>
		</method>
		<method name="username" qualifiers="const">
			<return type="String" />
			<description>
				Returns the username associated with the controller.
			</description>
		</method>
	</methods>
	<signals>
		<signal name="controller_created">
			<description>
			</description>
		</signal>
	</signals>
</class>
