<?xml version="1.0" encoding="UTF-8" ?>
<class name="SearchQuery" inherits="QueryBuilder" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/godotengine/godot/master/doc/class.xsd">
	<brief_description>
		A query builder for search operations.
	</brief_description>
	<description>
		The SearchQuery class allows constructing search queries for the Torii indexer, supporting filtering by query string, pagination, and sorting.
	</description>
	<tutorials>
	</tutorials>
	<methods>
		<method name="cursor">
			<return type="SearchQuery" />
			<param index="0" name="cursor" type="String" />
			<description>
				Sets the cursor for pagination.
			</description>
		</method>
		<method name="limit">
			<return type="SearchQuery" />
			<param index="0" name="limit" type="int" />
			<description>
				Sets the limit for the number of results.
			</description>
		</method>
		<method name="order_by">
			<return type="SearchQuery" />
			<param index="0" name="field" type="String" />
			<param index="1" name="direction" type="int" />
			<description>
				Sets the sorting order for the results.
			</description>
		</method>
		<method name="pagination">
			<return type="SearchQuery" />
			<param index="0" name="limit" type="int" />
			<param index="1" name="cursor" type="String" />
			<param index="2" name="_unnamed_arg2" type="int" />
			<description>
				Sets the pagination parameters (limit and cursor).
			</description>
		</method>
		<method name="query">
			<return type="SearchQuery" />
			<param index="0" name="query" type="String" />
			<description>
				Sets the search query string.
			</description>
		</method>
	</methods>
	<members>
		<member name="type" type="int" setter="set_type" getter="get_type" overrides="QueryBuilder" default="9" />
	</members>
</class>
