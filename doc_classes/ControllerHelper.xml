<?xml version="1.0" encoding="UTF-8" ?>
<class name="ControllerHelper" inherits="Object" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/godotengine/godot/master/doc/class.xsd">
	<brief_description>
		Helper class for controller operations.
	</brief_description>
	<description>
		The ControllerHelper class provides utility methods for managing controller-related tasks, such as key generation, validation, and storage checks.
	</description>
	<tutorials>
	</tutorials>
	<methods>
		<method name="create_session_registration_url" qualifiers="static">
			<return type="String" />
			<param index="0" name="private_key" type="String" />
			<param index="1" name="policies" type="Dictionary" />
			<param index="2" name="rpc_url" type="String" />
			<param index="3" name="preset" type="String" default="&quot;&quot;" />
			<description>
				Creates a session registration URL.
			</description>
		</method>
		<method name="create_session_registration_url_with_urls" qualifiers="static">
			<return type="String" />
			<param index="0" name="private_key" type="String" />
			<param index="1" name="policies" type="Dictionary" />
			<param index="2" name="rpc_url" type="String" />
			<param index="3" name="keychain_url" type="String" />
			<param index="4" name="cartridge_api_url" type="String" />
			<param index="5" name="preset" type="String" default="&quot;&quot;" />
			<description>
				Creates a session registration URL with custom keychain and API URLs.
			</description>
		</method>
		<method name="generate_private_key" qualifiers="static">
			<return type="String" />
			<description>
				Generates a new private key.
			</description>
		</method>
		<method name="get_controller_class_hash" qualifiers="static">
			<return type="String" />
			<param index="0" name="version" type="int" />
			<description>
				Retrieves the class hash for a specific controller version.
			</description>
		</method>
		<method name="get_public_key" qualifiers="static">
			<return type="String" />
			<param index="0" name="private_key" type="String" />
			<description>
				Derives the public key from a given private key.
			</description>
		</method>
		<method name="has_storage" qualifiers="static">
			<return type="bool" />
			<param index="0" name="app_id" type="String" />
			<description>
				Checks if storage exists for a given application ID.
			</description>
		</method>
		<method name="signer_to_guid" qualifiers="static">
			<return type="String" />
			<param index="0" name="private_key" type="String" />
			<description>
				Converts a signer's private key to a GUID.
			</description>
		</method>
		<method name="validate_felt" qualifiers="static">
			<return type="bool" />
			<param index="0" name="felt" type="String" />
			<description>
				Validates a Felt (Field Element) string.
			</description>
		</method>
	</methods>
	<constants>
		<constant name="Webauthn" value="1" enum="SignerType">
