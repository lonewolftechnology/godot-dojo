<?xml version="1.0" encoding="UTF-8" ?>
<class name="DojoContractQuery" inherits="DojoQueryBase" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/godotengine/godot/master/doc/class.xsd">
	<brief_description>
		A query for retrieving contracts.
	</brief_description>
	<description>
		This class is used to query for contracts. It allows filtering by contract addresses and contract types.
	</description>
	<tutorials>
	</tutorials>
	<members>
		<member name="contract_addresses" type="String[]" setter="set_contract_addresses" getter="get_contract_addresses" default="[]">
			An array of contract addresses to filter by.
		</member>
		<member name="contract_types" type="int[]" setter="set_contract_types" getter="get_contract_types" default="[]">
			An array of contract types to filter by (e.g., 'ERC721', 'ERC1155').
		</member>
	</members>
	<constants>
		<constant name="DOJO::ContractType::WORLD" value="0" enum="ContractType">
			A world contract.
		</constant>
		<constant name="DOJO::ContractType::ERC20" value="1" enum="ContractType">
			An ERC20 contract.
		</constant>
		<constant name="DOJO::ContractType::ERC721" value="2" enum="ContractType">
			An ERC721 contract.
		</constant>
		<constant name="DOJO::ContractType::ERC1155" value="3" enum="ContractType">
			An ERC1155 contract.
		</constant>
		<constant name="DOJO::ContractType::UDC" value="4" enum="ContractType">
			A Universal Deployer Contract.
		</constant>
		<constant name="DOJO::ContractType::OTHER" value="5" enum="ContractType">
			Any other contract type.
		</constant>
	</constants>
</class>
